        <Button x:Name="btn_confirmer" Content="Confirmer" HorizontalAlignment="Left" Margin="490,410,0,0" VerticalAlignment="Top" Width="75" Click="btn_confirmer_Click"/>
        <Label x:Name="label2_Copy" Content="Numéro de carte bancaire" HorizontalAlignment="Right" Margin="0,167,488,0" VerticalAlignment="Top"/>
        <Label x:Name="label4_Copy" Content="Cryptogramme" HorizontalAlignment="Right" Margin="0,196,486,0" VerticalAlignment="Top"/>
        <Label x:Name="label5_Copy" Content="Date d'expiration" HorizontalAlignment="Right" Margin="0,227,486,0" VerticalAlignment="Top"/>
